{
  "manifest_version": 2,
  "name": "The Counterbalance",
  "version": "1",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "browser_action": { "default_popup": "popup.html" },
  "permissions": ["tabs", "webNavigation", "<all_urls>"]
}
